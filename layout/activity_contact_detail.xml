<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorSecondary"
    tools:context=".ContactDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/contactIv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100sdp"
            android:src="@mipmap/ic_launcher"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/nameTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Mohitkumar soni"
            android:textSize="@dimen/_18sdp"
            android:textColor="@color/black"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"/>

        <TextView
            android:id="@+id/notesTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="this is demo notes this is demo notes this is demo notes this is demo notes this is demo notes "
            android:textSize="@dimen/_14sdp"
            android:textStyle="italic"
            android:textColor="@color/black"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"/>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="2"
            android:padding="@dimen/_5sdp">

            <TableRow>
                <TextView
                    android:text="@string/phone"
                    android:textSize="@dimen/_16sdp"
                    android:textColor="@color/textHint"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/phoneTv"
                    tools:text="7666666200"
                    android:textSize="@dimen/_16sdp"
                    android:textColor="@color/black"
                    android:padding="@dimen/_5sdp"
                    android:textStyle="bold"
                    android:layout_marginStart="@dimen/_10sdp"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:text="@string/e_mail"
                    android:textSize="@dimen/_16sdp"
                    android:textColor="@color/textHint"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/emailTv"
                    tools:text="mohitsoni@gmail.com"
                    android:textSize="@dimen/_16sdp"
                    android:textColor="@color/black"
                    android:padding="@dimen/_5sdp"
                    android:textStyle="bold"
                    android:layout_marginStart="@dimen/_10sdp"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:text="Added Time"
                    android:textSize="@dimen/_16sdp"
                    android:textColor="@color/textHint"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/addedTimeTv"
                    tools:text="68485"
                    android:textSize="@dimen/_16sdp"
                    android:textColor="@color/black"
                    android:padding="@dimen/_5sdp"
                    android:textStyle="bold"
                    android:layout_marginStart="@dimen/_10sdp"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:text="Updated Time"
                    android:textSize="@dimen/_16sdp"
                    android:textColor="@color/textHint"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/updatedTimeTv"
                    tools:text="19816"
                    android:textSize="@dimen/_16sdp"
                    android:textColor="@color/black"
                    android:padding="@dimen/_5sdp"
                    android:textStyle="bold"
                    android:layout_marginStart="@dimen/_10sdp"/>
            </TableRow>

        </TableLayout>


    </LinearLayout>

</RelativeLayout>